{
  "expo": {
    "name": "Tilawa",
    "slug": "tilawa",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tilawa.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Tilawa needs access to your microphone to record Quran recitations.",
        "NSCameraUsageDescription": "Tilawa needs access to your camera for profile pictures."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.tilawa.app",
      "permissions": [
        "RECORD_AUDIO",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "Allow Tilawa to access your microphone to record Quran recitations."
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "organization": "your-org",
          "project": "tilawa-mobile"
        }
      ]
    ],
    "scheme": "tilawa",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      },
      "sentryDsn": "https://9d055dee0c65e2fa4f8e90bf426da06a@o4510450908463104.ingest.de.sentry.io/4510451008929872"
    }
  }
}
